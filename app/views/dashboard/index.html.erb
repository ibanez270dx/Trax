

<h1>Dashboard</h1>

<div class="dashboard row-fluid">
  <div class="span4">
    <%= link_to ' Create Track', '#createTrack', id: 'create-track', class: 'icon-plus-sign btn', data: { toggle: "modal" } %>
    <h3>My Tracks</h3>
    <table class="table table-hover table-striped table-bordered">
      <thead>
        <tr>
          <th>Title</th>
          <th>Duration</th>
        </tr>
      </thead>
      <tbody>
        <% @tracks.each do |track| %>
          <tr>
            <td><%= track.title %></td>
            <td><%= track.duration %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="span4">
    <%= link_to ' Create Project', '#createProject', id: 'create-project', class: 'icon-plus-sign btn', data: { toggle: "modal" } %>
    <h3>My Projects</h3>
  </div>

  <div class="span4">
    <%= link_to ' Create Song', '#createSong', id: 'create-song', class: 'icon-plus-sign btn', data: { toggle: "modal" } %>
    <h3>My Songs</h3>
  </div>
</div>

<!-- Modal -->
<div id="createTrack" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h3 id="modal-label" class="icon-plus-sign"> Add Track</h3>
  </div>
  <div class="modal-body">

    <!-- Select Record or Upload -->
    <div id="select-type">
      <div class="row-fluid">
        <div id="select-record" class="span5 clickable">
          <span class="icon-microphone icon-12x"></span>
          <h3>Record</h3>
        </div>
        <div class="span2 or">
          <span>or</span>
        </div>
        <div id="select-upload" class="span5 clickable">
          <span class="icon-upload icon-12x"></span>
          <h3>Upload</h3>
        </div>
      </div>
    </div>

    <!-- Record -->
    <div id="record-actions">
      <span id="record" class="icon-circle icon-12x clickable"></span>
      <span id="stop" class="icon-stop icon-12x clickable"></span>
      <span id="play" class="icon-play icon-12x clickable disabled"></span>
      <span id="pause" class="icon-pause icon-12x clickable"></span>
      <div id="status"></div>
    </div>

    <!-- Details -->
    <div id="track-details">
      <%= render partial: 'track/add/details', formats: [ :html ] %>
    </div>

    <!-- Uploading to SoundCloud -->
    <div id="upload-to-soundcloud">
      <div class="icon-cloud-upload icon-8x"></div>
      <div class="status">Uploading to SoundCloud</div>
      <div class="ajax-loader"><%= image_tag 'ajax-loader.gif' %></div>
    </div>
    <div id="upload-to-soundcloud-mask"></div>


  </div>
  <div class="modal-footer">
    <button id="modal-close" class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
    <button id="to-details" class="btn btn-success">Alright, sounds good</button>
    <button id="to-upload" class="btn btn-primary">Save and Upload</button>
  </div>
</div>