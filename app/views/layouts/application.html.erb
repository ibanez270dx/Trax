<!DOCTYPE html>
<html class="application <%= "#{controller.controller_path.split('/').join(' ')} #{controller.action_name.gsub(/_/, '-')}" %>">
  <head>
    <title><%= @title || "Trax" %></title>
    <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
    <script src="//connect.soundcloud.com/sdk.js"></script>
    <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
    <%= csrf_meta_tags %>
    <%= yield :head %>
  </head>
  <body>

    <div class="navbar navbar-inverse navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container">
          <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <%= link_to 'TRAX', dashboard_path, class: 'brand' %>
          <div class="nav-collapse collapse">
            <ul class="nav">
              <li class="<%= 'active' if request.url==dashboard_url %>">
                <%= link_to 'Dashboard', dashboard_path %>
              </li>
              <li class="">
                <%= link_to 'Projects', '#' %>
              </li>
            </ul>
          </div>
          <% if logged_in? %>
            <div class="nav-collapse collapse pull-right">
              <ul class="nav">
                <li><%= link_to 'Logout', user_logout_path %></li>
              </ul>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <div class="container content-section">
      <%= render 'layouts/flash_messages' %>

      <%= yield %>
    </div>

    <div class="container">
      <footer>
        <%= yield :footer %>
      </footer>
    </div>
  </body>
</html>
